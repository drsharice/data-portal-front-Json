{
  "openapi": "3.0.0",
  "info": {
    "title": "M365 API",
    "version": "1.0.0",
    "description": "Mock Microsoft 365 API for users, groups, and mail."
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "List M365 users",
        "responses": {
          "200": {
            "description": "Array of users",
            "content": {
              "application/json": {
                "example": [{ "id": "u123", "name": "Alex Smith", "email": "alex@company.com" }]
              }
            }
          }
        }
      }
    },
    "/groups": {
      "get": {
        "summary": "List M365 groups",
        "responses": {
          "200": {
            "description": "Array of groups",
            "content": {
              "application/json": {
                "example": [{ "id": "g456", "name": "Engineering Team" }]
              }
            }
          }
        }
      }
    }
  }
}
